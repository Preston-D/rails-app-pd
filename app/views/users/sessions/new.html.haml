.container-sm
  .m-5
    %h1.d-flex.justify-content-center Log in
    - if devise_mapping.registerable? && controller_name != 'registrations'
      .d-flex.justify-content-center
        %p New account? &nbsp;
        = link_to 'Sign up', new_registration_path(resource_name), class: 'link-offset-2-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover'
  .card.mx-auto.w-75
    .card-body.m-3
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field.row.mb-4
          = f.label(:email, class: 'visually-hidden')
          = f.email_field(:email, class: 'form-control', autofocus: true, autocomplete: 'email', placeholder: 'Email')
        .field.row.mb-2
          = f.label(:password, class: 'visually-hidden')
          = f.password_field(:password, class: 'form-control', autofocus: true, autocomplete: 'current-password', placeholder: 'Password')
        - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
          .mb-4.mt-1
            = link_to 'Forgot your password?', new_password_path(resource_name), class: 'link-offset-2-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover'
        .field.row.mb-4
          .form-check
            = f.check_box(:remember_me, class: 'form-check-input')
            = f.label(:remember_me, class: 'form-check-label')
        .actions.d-flex.justify-content-center
          = f.submit('Sign in', class: 'btn btn-outline-primary btn-lg col-6 mx-auto mt-2 mb-4')

