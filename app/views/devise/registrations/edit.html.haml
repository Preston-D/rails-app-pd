.container-sm
  .m-5
    %h2.d-flex.justify-content-center Edit #{resource_name.to_s.humanize}
  .card.mx-auto.w-75
    .card-body.m-3
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field.mb-4
          = f.label(:email, class: 'mb-1')
          = f.email_field(:email, class: 'form-control', autofocus: true, autocomplete: 'email', placeholder: 'Email')
        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %div
            Currently waiting confirmation for: #{resource.unconfirmed_email}
        .field.mb-4
          = f.label(:password, class: 'mb-1')
          %i (leave blank if you don't want to change it)
          = f.password_field(:password, class: 'form-control', autocomplete: "new-password")
          - if @minimum_password_length
            %em
              = @minimum_password_length
              characters minimum
        .field.mb-4
          = f.label(:password_confirmation, class: 'mb-1')
          = f.password_field(:password_confirmation, class: 'form-control', autocomplete: "new-password")
        .field.mb-4
          = f.label(:current_password, class: 'mb-1')
          %br
          %i (we need your current password to confirm your changes)
          = f.password_field(:current_password, class: 'form-control', autocomplete: "current-password")
        .actions.d-flex.justify-content-center
          = f.submit('Update', class: 'btn btn-outline-primary col-6 mx-auto mt-2 mb-4')
.container-sm
  .m-5
    %h3.d-flex.justify-content-center More Options
  .card.mx-auto.w-75
    %h5.card-header Delete my account
    .card-body
      .mb-3.text-wrap.text-start.text-body-secondary
        Unhappy? No worries, you can delete your account.
        %b.text-danger This is permanent.
        All content belonging to this user will be erased and unrecoverable.
      .mb-3.d-flex.justify-content-center
        = button_to "Delete my account", registration_path(resource_name), class: 'btn btn-outline-danger', data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete
